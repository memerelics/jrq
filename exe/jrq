#!/usr/bin/env ruby

require 'jrq'

require 'json'
require 'optparse'
require 'ostruct'
require 'hashie'
require 'awesome_print'

_ = JSON.load(STDIN.read)
_ = Hashie::Mash.new(_)

def display(o, options)
  if o.is_a? Hash
    puts JSON.pretty_generate(o)
  else
    if options.raw
      puts o
    else
      ap o
    end
  end
end

options = OpenStruct.new
display(_, options) and exit 0 if ARGV.length.zero?

oparser = OptionParser.new do |opts|
  opts.on('-r', '--raw', 'display output without quotations') do |raw|
    options.raw = raw
  end
end
args = oparser.parse!(ARGV)

display(eval(args.first), options) # first かどうかがわからん, と
